@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>Fidel Automated Parking</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
</head>
<body>

    <!--Navbar -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
        <div class="container-fluid">
            <a class="navbar-brand" href="#">Fidel Automated Parking</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navMenu">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navMenu">
                <ul class="navbar-nav ms-auto">
                  
                    <li class="nav-item"><a class="nav-link " href="Account/Login">👤 Login</a></li>
                    <li class="nav-item"><a class="nav-link" href="#"></a></li>
                </ul>
            </div>
        </div>
    </nav>

    <!-- Image Carousel -->
    <div id="heroCarousel" class="carousel slide" data-bs-ride="carousel">
        <div class="carousel-inner">

            <div class="carousel-item active">
                <img src="https://jarentals.net/wp-content/cars/bk1.jpg" class="d-block w-100" style="max-height: 400px; object-fit: cover;" alt="Modern Parking Lot">
                <div class="carousel-caption d-none d-md-block">
                    <h2>AI-Powered Parking</h2>
                    <p>Experience seamless parking with vehicle scanning and smart tickets.</p>
                </div>
            </div>

            <div class="carousel-item">
                <img src="https://jarentals.net/wp-content/cars/bk2.jpg" class="d-block w-100" style="max-height: 400px; object-fit: cover;" alt="Reservation System">
                <div class="carousel-caption d-none d-md-block">
                    <h2>Reserve Ahead</h2>
                    <p>Book your spot online before you even leave home.</p>
                </div>
            </div>

            <div class="carousel-item">
                <img src="https://jarentals.net/wp-content/cars/bk3.jpg" class="d-block w-100" style="max-height: 400px; object-fit: cover;" alt="Smart Entry">
                <div class="carousel-caption d-none d-md-block">
                    <h2>No Hassle Entry</h2>
                    <p>Automated gates recognize your vehicle instantly.</p>
                </div>
            </div>
            <div class="carousel-item">
                <img src="https://jarentals.net/wp-content/cars/bk4.jpg" class="d-block w-100" style="max-height: 400px; object-fit: cover;" alt="Smart Entry">
                <div class="carousel-caption d-none d-md-block">
                    <h2>No Hassle Entry</h2>
                    <p>Automated gates recognize your vehicle instantly.</p>
                </div>
            </div>

        </div>

        <button class="carousel-control-prev" type="button" data-bs-target="#heroCarousel" data-bs-slide="prev">
            <span class="carousel-control-prev-icon"></span>
        </button>
        <button class="carousel-control-next" type="button" data-bs-target="#heroCarousel" data-bs-slide="next">
            <span class="carousel-control-next-icon"></span>
        </button>
    </div>

    <!-- About Us -->
    <section id="about" class="container py-5">
        <h2>About Us</h2>
        <p>
            SmartPark is a fully automated parking solution that uses Artificial Intelligence to scan vehicle model and license plates,
            issue tickets automatically, and simplify the entire parking experience.
        </p>
    </section>

    <!-- Services -->
    <section id="services" class="bg-light py-5">
        <div class="container">
            <h2 class="mb-4">Services Offered</h2>
            <div class="row">
                <div class="col-md-4">
                    <h5>AI Vehicle Scanning</h5>
                    <p>Scans your car's model and plate as you enter, no human needed.</p>
                </div>
                <div class="col-md-4">
                    <h5>Automated Ticketing</h5>
                    <p>Instantly assigns and logs your ticket based on your license plate.</p>
                </div>
                <div class="col-md-4">
                    <h5>Online Reservations</h5>
                    <p>Reserve your spot from home and avoid the hassle of searching.</p>
                </div>
            </div>
        </div>
    </section>

    <!--Reservation Call-to-Action -->
    <section id="reserve" class="text-center py-5">
        <div class="container">
            <h2>Reserve a Parking Spot</h2>
            <p>Plan ahead and skip the wait by booking your space in advance.</p>
            <a href="/Reserve" class="btn btn-success btn-lg">Start Reservation</a>
        </div>
    </section>

    <!--Footer -->
    <footer class="bg-dark text-white text-center py-3">
        <p class="mb-0">© 2025 SmartPark. All rights reserved.</p>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
