<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - FidelParkingManagement</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/FidelParkingManagement.styles.css" asp-append-version="true" />
</head>
<body>
    <!-- 🔹 Global Header
    <header class="site-header">
    <h1>Fidel Parking Management System</h1>

    @* @if (User.Identity.IsAuthenticated)  // Show only if the user is logged in *@ 
    @*  {  *@
    @*     <button class="logout-btn" onclick="location.href='@Url.Action("Logout", "Account")'">Log Out</button>  *@
    @* }  *@
    </div>
    </header> -->

    @* <!-- Video Banner --> *@
    @* <div class="video-banner-container"> *@
    @*     <video autoplay loop muted playsinline class="video-banner"> *@
    @*         <source src="~/videos/banner-video.mp4" type="video/mp4"> *@
    @*         Your browser does not support the video tag. *@
    @*     </video> *@
    @* </div> *@

    
    <div class="container">
       
        <!--Navbar -->
        <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
            <div class="container-fluid"> 
                <a class="navbar-brand" href="#">Welcome to Your Dashboard</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navMenu">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navMenu">
                    <ul class="navbar-nav ms-auto">

                        <li class="nav-item"><a class="nav-link " href="Account/Login">👤 Logout</a></li>
                        <li class="nav-item"><a class="nav-link" href="#"></a></li>
                    </ul>
                </div>
            </div>
        </nav>
        <div class="row h-100" style="height:100%;">
            
            <!-- Sidebar Navigation -->
            @{
                    try
                    {
                        if (TempData["username"]!.Equals("8854TW"))
                        {
                        TempData.Keep("username");
                        
                        <div class="sidebar">
                           
                            <ul class="nav flex-column h-100" style="text-decoration: none;">
                                <li><a href="Index" class="nav-item">👤 Dashboard</a></li>
                                <hr/>
                            <li><a href="@Url.Action("MyCar", "Dashboard")" class="nav-item nav-link">🚗 My Car</a></li>
                            <li><a href="@Url.Action("PayOnline", "Dashboard")" class="nav-item nav-link">💳 Pay Online</a></li>
                            <li><a href="@Url.Action("FindASpot", "Dashboard")" class="nav-item nav-link">🅿️ Find A Spot</a></li>
                            <li><a href="@Url.Action("ReserveParking", "Dashboard")" class="nav-item nav-link">📅 Reserve Parking</a></li>
                            <li><a href="@Url.Action("ReportIssue", "Dashboard")" class="nav-item nav-link">⚠️ Report Issue</a></li>
                            </ul>
                        </div>
                }
                    }
                    catch (Exception ex)
                    {
                        <script>
                            console.log("Error: " + ex.message);
                        </script>
                    }
              
               
            }

            <!-- Main content area where pages load dynamically -->
            <div class="main-content">
                <main role="main" class="main-content">
                    @RenderBody()
                </main>
            </div>
            </div>
        </div>

        <!-- ✅ Main Content Area -->

    </div>

    <!-- 🔹 Footer -->
    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - FidelParkingManagement - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>

    <!-- 🔹 Scripts -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
