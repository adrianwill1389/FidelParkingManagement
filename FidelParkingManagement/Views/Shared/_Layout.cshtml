<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - FidelParkingManagement</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/FidelParkingManagement.styles.css" asp-append-version="true" />
</head>
<body>


    <!-- 🔹 Global Header -->
    <header class="site-header">
        <h1>Fidel Parking Management System</h1>

            @if (User.Identity.IsAuthenticated)  // Show only if the user is logged in
            {
                <button class="logout-btn" onclick="location.href='@Url.Action("Logout", "Account")'">Log Out</button>
            }
        </div>
    </header>

    <!-- Video Banner -->
    <div class="video-banner-container">
        <video autoplay loop muted playsinline class="video-banner">
            <source src="~/videos/banner-video.mp4" type="video/mp4">
            Your browser does not support the video tag.
        </video>
    </div>
    <div class="container-fluid d-flex">
        <!-- ✅ Sidebar (Only for Logged-in Users) -->
        @if (User.Identity != null && User.Identity.IsAuthenticated)
        {
                <!-- Sidebar Navigation -->
                <div class="sidebar">
                    <ul>

                        <li><a href="@Url.Action("MyCar", "Dashboard")">🚗 My Car</a></li>
                        <li><a href="@Url.Action("PayOnline", "Dashboard")">💳 Pay Online</a></li>
                        <li><a href="@Url.Action("FindASpot", "Dashboard")">🅿️ Find A Spot</a></li>
                        <li><a href="@Url.Action("ReserveParking", "Dashboard")">📅 Reserve Parking</a></li>
                        <li><a href="@Url.Action("ReportIssue", "Dashboard")">⚠️ Report Issue</a></li>
                    </ul>
                </div>
            
        }


        <!-- ✅ Main Content Area -->
        <main role="main" class="main-content">
            @RenderBody()
        </main>
    </div>
   
    <!-- 🔹 Footer -->
    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - FidelParkingManagement - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>

    <!-- 🔹 Scripts -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
