    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h2>🚗 My Car</h2>
<p>Manage your vehicle details here.</p>

<div style="display: flex; gap: 20px;">
    <!-- Car Image & Live Stream -->
    <div>
        <img src="/images/car.jpg" alt="Your Car" width="400" height="250">
        <div style="color: red; font-size: 20px; font-weight: bold;">
            🔴 LIVE STREAM
        </div>
    </div>

    <!-- Car Details -->
    <div>
        <div style="background: red; color: white; padding: 10px; font-size: 18px; font-weight: bold;">
            LOT 34
        </div>
        <table border="1" width="100%" style="border-collapse: collapse;">
            <tr><td><strong>Operation:</strong></td><td style="color: purple;">Vehicle Parked</td></tr>
            <tr><td><strong>Ticket #:</strong></td><td>47447438</td></tr>
            <tr><td><strong>License Plate #:</strong></td><td style="color: blue;">4321 GH</td></tr>
            <tr><td><strong>Vehicle Make:</strong></td><td>Toyota</td></tr>
            <tr><td><strong>Vehicle Model:</strong></td><td>Camry</td></tr>
            <tr><td><strong>Vehicle Color:</strong></td><td style="color: blue;">Silver</td></tr>
            <tr><td><strong>Entry Time:</strong></td><td>12:30 PM</td></tr>
            <tr><td><strong>Exit Time:</strong></td><td>N/A</td></tr>
            <tr><td><strong>Elapsed Time:</strong></td><td>2h:34m:368</td></tr>
        </table>
        <br>
        <button style="background: green; color: white; padding: 10px; font-size: 16px; border: none; cursor: pointer;">
            📍 Locate My Car
        </button>
    </div>
</div>

