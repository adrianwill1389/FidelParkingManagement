@model DashboardViewModel

<style>
    .dashboard-container {
        display: flex;
        min-height: 100vh;
    }

    .sidebar {
        width: 250px;
        background: #333;
        color: white;
        padding: 20px;
    }

        .sidebar ul {
            list-style: none;
            padding: 0;
        }

            .sidebar ul li {
                margin-bottom: 10px;
            }

                .sidebar ul li a {
                    color: white;
                    text-decoration: none;
                    font-size: 18px;
                }

    .main-content {
        flex: 1;
        padding: 20px;
    }

    .card {
        background: #f4f4f4;
        padding: 15px;
        border-radius: 10px;
        width: 300px;
    }

    .top-up-btn {
        display: block;
        margin-top: 10px;
        padding: 8px 15px;
        background: #28a745;
        color: white;
        text-align: center;
        border-radius: 5px;
        text-decoration: none;
    }
</style>

<div class="dashboard-container">
    <!-- Sidebar Navigation -->
    <div class="sidebar">
        <ul>
            <li><a href="#" class="menu-link" data-url="@Url.Action("MyCar", "Dashboard")">🚗 My Car</a></li>
            <li><a href="#" class="menu-link" data-url="@Url.Action("PayOnline", "Dashboard")">💳 Pay Online</a></li>
            <li><a href="#" class="menu-link" data-url="@Url.Action("FindASpot", "Dashboard")">🅿️ Find A Spot</a></li>
            <li><a href="#" class="menu-link" data-url="@Url.Action("ReserveParking", "Dashboard")">📅 Reserve Parking</a></li>
            <li><a href="#" class="menu-link" data-url="@Url.Action("ReportIssue", "Dashboard")">⚠️ Report Issue</a></li>

        </ul>
    </div>

    <!-- Main content area where pages load dynamically -->
    <div id="dashboard-content" style="padding-left: 50px;">
        <h2>Welcome to Your Dashboard</h2>
        <p>Select an option from the sidebar to get started.</p>
    </div>


</div>

<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
 <script>
    $(document).ready(function () {
        $(".menu-link").click(function (e) {
            e.preventDefault();  // Prevent full page reload

            var url = $(this).data("url");

            // Load the content dynamically inside the main dashboard area
            $("#dashboard-content").load(url);
        });
    });
</script> 
