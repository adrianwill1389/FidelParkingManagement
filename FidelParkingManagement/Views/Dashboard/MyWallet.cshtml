@model DashboardViewModel

<style>
    .dashboard-container {
        display: flex;
        min-height: 100vh;
    }

    .main-content {
        flex: 1;
        padding: 20px;
    }

    .card {
        background: #f4f4f4;
        padding: 15px;
        border-radius: 10px;
        width: 300px;
    }

    .top-up-btn {
        display: block;
        margin-top: 10px;
        padding: 8px 15px;
        background: #28a745;
        color: white;
        text-align: center;
        border-radius: 5px;
        text-decoration: none;
    }
</style>

<div class="dashboard-container">
    <!-- Sidebar Navigation -->
    <div class="sidebar">
        <ul>
            
            <li><a href="@Url.Action("MyCar", "Dashboard")">🚗 My Car</a></li>
            <li><a href="@Url.Action("PayOnline", "Dashboard")">💳 Pay Online</a></li>
            <li><a href="@Url.Action("FindASpot", "Dashboard")">🅿️ Find A Spot</a></li>
            <li><a href="@Url.Action("ReserveParking", "Dashboard")">📅 Reserve Parking</a></li>
            <li><a href="@Url.Action("ReportIssue", "Dashboard")">⚠️ Report Issue</a></li>
        </ul>
    </div>

    <!-- Main content area -->
    <div class="main-content">
        <h2>My Wallet</h2>

        <div class="card">
            <p><strong>Wallet Balance:</strong> $@Model.WalletAmount</p>
            <p><strong>Membership:</strong> @Model.MembershipStatus</p>

            <!-- Top-Up Button -->
            <a href="@Url.Action("PayOnline", "Dashboard")" class="top-up-btn">Top-Up Wallet</a>
        </div>
    </div>
</div>
